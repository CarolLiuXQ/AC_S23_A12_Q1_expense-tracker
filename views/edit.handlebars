<div class="container">
  <form method="POST" action="/records/{{record._id}}?_method=PUT">
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">*必填欄位</label>
      <div class="col-sm-10">
        <h4>請修改你的支出</h4>
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputName" class="col-sm-2 col-form-label">名稱*：</label>
      <div class="col-sm-10">
        <input name="name" class="form-control" id="inputName" value="{{record.name}}">
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputDate" class="col-sm-2 col-form-label">日期*：
      </label>
      <div class="col-sm-10">
        <input type="date" name="date" class="form-control" id="inputDate" value="{{record.date}}">
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別*：</label>
      <div class="col-sm-10">
        <select class="form-select" id="category" name="category">
          <option selected>Select</option>
          <option value="home" {{#isEqual "home" record.category}}selected{{/isEqual}}>家居物業</option>
          <option value="transport" {{#isEqual "transport" record.category}}selected{{/isEqual}}>交通出行</option>
          <option value="entertainment" {{#isEqual "entertainment" record.category}}selected{{/isEqual}}>休閒娛樂
          </option>
          <option value="food" {{#isEqual "food" record.category}}selected{{/isEqual}}>餐飲食品</option>
          <option value="others" {{#isEqual "others" record.category}}selected{{/isEqual}}>其他</option>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputAmount" class="col-sm-2 col-form-label">金額*：
      </label>
      <div class="col-sm-10">
        <input type="number" name="amount" class="form-control" id="inputAmount" min="0" value="{{record.amount}}">
      </div>
    </div>

    <button type="submit" class="btn btn-outline-success">送出</button>

  </form>
</div>